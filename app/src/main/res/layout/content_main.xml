<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.josedanilo.drawme.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:layout_height="0dp">

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nuevo"
            android:layout_weight="1"
            android:src="@drawable/nue" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/trazo"
            android:layout_weight="1"
            android:src="@drawable/pen"/>

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/borrar"
            android:layout_weight="1"
            android:src="@drawable/borra" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guardar"
            android:layout_weight="1"
            android:src="@drawable/des" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/colores"
            android:layout_weight="1"
            android:src="@drawable/mscolor" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/salir"
            android:layout_weight="1"
            android:src="@drawable/out" />

    </LinearLayout>

    <com.example.josedanilo.drawme.Lienzo
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        class="com.example.josedanilo.drawme.Lienzo"
        android:id="@+id/lienzo"
        android:background="#FFFFFFFF" />


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:layout_height="0dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colornegro"
                android:layout_weight="1"
                android:tag="#FF000000"
                android:background="#FF000000" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colorrojo"
                android:layout_weight="1"
                android:tag="#FFFF0000"
                android:background="#FFFF0000"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colorverde"
                android:layout_weight="1"
                android:tag="#FF00FF00"
                android:background="#FF00FF00"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:id="@+id/colorblanco"
            android:layout_weight="1"
            android:tag="#EAEAAE"
            android:background="#EAEAAE"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colorazul"
                android:layout_weight="1"
                android:tag="#FF0000FF"
                android:background="#FF0000FF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:id="@+id/coloramarillo"
            android:layout_weight="1"
            android:tag="#FFFF00"
            android:background="#FFFF00"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:id="@+id/colormarron"
            android:layout_weight="1"
            android:tag="#800000"
            android:background="#800000"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:id="@+id/colorgris"
            android:layout_weight="1"
            android:tag="#c0c0c0"
            android:background="#c0c0c0"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:id="@+id/colornaranja"
            android:layout_weight="1"
            android:tag="#FF6600"
            android:background="#FF6600"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:id="@+id/colormorado"
            android:layout_weight="1"
            android:tag="#800080"
            android:background="#800080"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

