<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.josedanilo.drawme.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:src="@drawable/nuevoo" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:src="@drawable/trazz"/>

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:src="@drawable/eraser" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            android:src="@drawable/guardar" />

        <ImageButton
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:src="@drawable/salir" />

    </LinearLayout>

    <com.example.josedanilo.drawme.Lienzo
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        class="com.example.josedanilo.drawme.Lienzo"
        android:id="@+id/lienzo"
        android:background="#FFFFFFFF" />


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colornegro"
                android:layout_weight="1"
                android:tag="#FF000000"
                android:background="#FF000000" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colorrojo"
                android:layout_weight="1"
                android:tag="#FFFF0000"
                android:background="#FFFF0000"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colorverde"
                android:layout_weight="1"
                android:tag="#FF00FF00"
                android:background="#FF00FF00"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:id="@+id/colorblanco"
            android:layout_weight="1"
            android:tag="#FFFFFFFF"
            android:background="#FFFFFFFF"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/alturacolor"
                android:id="@+id/colorazul"
                android:layout_weight="1"
                android:tag="#FF0000FF"
                android:background="#FF0000FF"/>


        </LinearLayout>

</LinearLayout>
